<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ace.mortgagecalculator.MainActivity"
    android:columnCount="2"
    android:useDefaultMargins="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/priceEditText"
        android:layout_columnSpan="2"
        android:digits="0123456789"
        android:maxLength="9"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/priceTextView"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:background="@android:color/holo_green_light"
        android:elevation="@dimen/elevation"
        android:hint="@string/enter_price"
        android:padding="@dimen/textview_padding"
        android:textColorHint="@color/color_hint"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/downEditText"
        android:layout_columnSpan="2"
        android:digits="0123456789"
        android:maxLength="9"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/downTextView"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:background="@android:color/holo_green_light"
        android:elevation="@dimen/elevation"
        android:hint="@string/enter_dp"
        android:padding="@dimen/textview_padding"
        android:textColorHint="@color/color_hint"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/interestEditText"
        android:layout_columnSpan="2"
        android:digits="0123456789."
        android:maxLength="4"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/interestTextView"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:background="@android:color/holo_green_light"
        android:elevation="@dimen/elevation"
        android:hint="@string/enter_interest"
        android:padding="@dimen/textview_padding"
        android:textColorHint="@color/color_hint"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/loanLabelTextView"
        android:layout_gravity="center_vertical|right"
        android:text="@string/loan_term" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:id="@+id/loanSeekBar"
        android:layout_gravity="fill_horizontal"
        android:max="10"
        android:progress="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalLabelTextView"
        android:layout_gravity="right"
        android:text="@string/mortgage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalTextView"
        android:layout_gravity="fill_horizontal"
        android:background="@android:color/holo_green_light"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:padding="@dimen/textview_padding"
        android:textColor="#ffffff" />
</GridLayout>
